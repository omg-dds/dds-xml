<?xml version="1.0" encoding="UTF-8"?>

<domain_library xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xmlns="http://www.omg.org/spec/DDS-XML"
                xsi:schemaLocation="http://www.omg.org/spec/DDS-XML ./dds-xml_domain_definitions.xsd"
                name="MyDomainLibrary">

    <domain name="ShapesDomain" domain_id="32">
        <register_type name="ShapeType" type_ref="ShapeType"/>

        <topic name="Pentagon" register_type_ref="ShapeType"/>
        <topic name="Hexagon" register_type_ref="ShapeType"/>
        <topic name="Heptagon" register_type_ref="ShapeType"/>
        <topic name="Octagon" register_type_ref="ShapeType"/>
        <topic name="Nonagon" register_type_ref="ShapeType"/>
        <topic name="Decagon" register_type_ref="ShapeType"/>
        <topic name="Hendecagon" register_type_ref="ShapeType"/>
        <topic name="Dodecagon" register_type_ref="ShapeType"/>

    </domain>

    <domain name="AnotherShapesDomain" domain_id="101" domain_tag="MyDomainTag">
        <register_type name="ShapeTypeReg" type_ref="ShapeType" >
            <registered_name>ThusIsTheDatabusName</registered_name>
        </register_type>
        <topic name="Square" register_type_ref="ShapeTypeReg"/>

        <topic name="CircleBase" register_type_ref="ShapeTypeReg"/>
        <topic name="CircleExt" register_type_ref="ShapeTypeExtendeReg"/>

        <topic name="TriangleBase" register_type_ref="ShapeTypeReg" >
            <topic_name>Triangle</topic_name> <!-- Currently element is called: registered_name -->
            <datawriter_qos base_name="StandardProfileForThisSystem"/>
            <datareader_qos  base_name="StandardProfileForThisSystem2">
                <deadline><period><sec>3</sec></period></deadline>
            </datareader_qos>
        </topic>

        <topic name="TriangleExtended" register_type_ref="ShapeTypeExtended">
            <topic_name>Triangle</topic_name>
            <datawriter_qos></datawriter_qos>
            <datareader_qos></datareader_qos>
        </topic>

        <register_type name="MoveCommandResponse" type_ref="MoveCommandResponse"/>
        <register_type name="MoveCommand" type_ref="MoveCommand"/>
        <request_reply_service name="RobotCommandService"  
            register_request_type_ref="MoveCommand" register_reply_type_ref="MoveCommandResponse">
            <service_name>MyServiceRR</service_name>
            <request_topic_name>NonDefaultRequestTopicName</request_topic_name>
            <reply_topic_name>NonDefaultReplyTopicName</reply_topic_name>
            <requester>
                <request_datawriter_qos></request_datawriter_qos>
                <reply_datareader_qos></reply_datareader_qos>
            </requester>
            <replier>
                <request_datareader_qos></request_datareader_qos>
                <reply_datawriter_qos></reply_datawriter_qos>
            </replier>
        </request_reply_service>


        <register_interface name="RobotControl" interface_ref="RobotControlIf"/>

        <rpc_service name="FoodDispenserControl"  register_interface_ref="RobotControl">
            <service_name>MyService</service_name>
            <request_topic_name>Hello</request_topic_name>
            <reply_topic_name>HelloReply</reply_topic_name>
            <client>
                <request_datawriter_qos base_name="MyQosLib::MyQosProfile">
                    <qos_snippets></qos_snippets>
                    <reliability><max_blocking_time><sec>10</sec></max_blocking_time></reliability>
                </request_datawriter_qos>
                <reply_datareader_qos></reply_datareader_qos>
            </client>
            <server>
                <request_datareader_qos></request_datareader_qos>
                <reply_datawriter_qos></reply_datawriter_qos>
            </server>
        </rpc_service>


        <register_type name="MoveCommandResponse" type_ref="MoveCommandResponse"/>
        <register_type name="MoveCommand" type_ref="MoveCommand"/>
        <request_reply_service name="FoodDispenserService"  
            register_request_type_ref="MoveCommand" register_reply_type_ref="MoveCommandResponse">
            <service_name>MyServiceRR</service_name>
            <request_topic_name>NonDefaultRequestTopicName</request_topic_name>
            <reply_topic_name>Request</reply_topic_name>
            <requester>
                <request_datawriter_qos></request_datawriter_qos>
                <reply_datareader_qos></reply_datareader_qos>
            </requester>
            <replier>
                <request_datareader_qos></request_datareader_qos>
                <reply_datawriter_qos></reply_datawriter_qos>
            </replier>
        </request_reply_service>
    </domain>

</domain_library>
